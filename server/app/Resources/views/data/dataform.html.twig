{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div class="margin row">
                <div class="col-md-3">
                    
                </div>
                <div class="col-md-6">
                    {{ form_start(form) }}
                        <div class="form-group">
                        {{ form_row(form.text, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                        {{ form_row(form.number, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>

                    {{ form_end(form) }}
                </div>
                <div class="col-md-3">
                    
                </div>
            </div>

        </div>
    </div>
{% endblock %}
