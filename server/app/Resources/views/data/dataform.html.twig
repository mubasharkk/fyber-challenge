{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div class="margin row">
                <div class="col-md-3">
                    
                </div>
                <div class="col-md-6">
                    {{ form_start(form) }}
                        <div class="form-group">
                        {{ form_row(form.text, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                        {{ form_row(form.number, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                        {{ form_row(form.submit) }}
                        </div>

                    {{ form_end(form) }}
                </div>
                <div class="col-md-3">
                    
                </div>
            </div>
            <div class="margin row">
                <div class="col-md-3">
                    
                </div>
                <div class="col-md-6">
                    <table class="table">
                        <tr>
                            <th>Text</th>
                            <th>Integer</th>
                        </tr>
                        {% for i in allData %}
                        <tr>
                            <td>{{i.text}}</td>
                            <td>{{i.number}}</td>
                        </tr>
                        {% endfor %}                        
                    </table>
                </div>
                <div class="col-md-3">
                    
                </div>
            </div>

        </div>
    </div>
{% endblock %}
